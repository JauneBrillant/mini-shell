#!/usr/bin/env python3


def builtin_echo(args):
    print(" ".join(args))


def builtin_exit(args):
    exit()


BUILTIN_COMMAND_FUNC_MAPPING = {
    "echo": builtin_echo,
    "exit": builtin_exit,
}


def main():
    while True:
        line = input("> ")
        tokens = line.split()

        if len(tokens) == 0:
            continue

        command = tokens[0]
        args = tokens[1:]

        if command in BUILTIN_COMMAND_FUNC_MAPPING:
            func = BUILTIN_COMMAND_FUNC_MAPPING[command]
            func(args)
        else:
            # TODO 外部コマンドの実行
            pass


if __name__ == "__main__":
    main()
